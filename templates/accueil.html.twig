{% extends 'base.html.twig' %}

{% block title %}WaifuBot GUI - Legonzaur / Karitham{% endblock title %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet">
{% endblock stylesheets %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"/>
    <script src="js/profile.js"></script>
    <script src="css/interactive.js"></script>
{% endblock javascripts %}

{% block body %}
        <h2 class="text-center">WaifuBot GUI</h2>
    <main>
        <div class="container">
            <div id="content">
                <form class='form-inline'>
                    <div class="input-group">
                        <input type='text' id='search' class="form-control search-form" placeholder="uint or string value">
                        <span class="input-group-btn" style="width:39px">
                        </span>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <h3 class="text-center">Sorting options</h3>
            Sort <select id="sort">
                <option value="Date">Date</option>
                <option value="ID">ID</option>
                <option value="Name">Name</option>
                <option value="Anime">Anime (coming soon...)</option>
            </select>
        </div>

        <div id="list" class="small">
            {% if waifuList is not empty %}
                {% for waifus in waifuList %}
                    <div class="character small">
                        <a href="https://anilist.co/character/{{ waifus.id }}">
                            <img src="{{ waifus.image }}"/>
                        </a>
                        <p style="text-align: center;">{{ waifus.id }}</p>
                        <p style="text-align: center;">{{ waifus.name }}</p>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <button onclick="document.getElementById('previous').click()">Previous</button>
        <button onclick="document.getElementById('next').click()">Next</button>
    </main>
    <footer style="text-align: center;">Created by Legonzaur#2100, Karitham#0577, My5tic4l#3237</footer>
{% endblock body %}